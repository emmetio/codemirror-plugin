{
  "name": "@emmetio/codemirror-plugin",
  "version": "0.3.5",
  "description": "Plugin for CodeMirror web editor",
  "main": "dist/emmet-codemirror-plugin.cjs.js",
  "module": "dist/emmet-codemirror-plugin.es.js",
  "scripts": {
    "build": "rollup -c",
    "watch": "rollup -wc",
    "build:browser": "rollup -c bundle-rollup.config.js",
    "watch:browser": "rollup -w -c bundle-rollup.config.js",
    "prepublish": "npm run build && npm run build:browser"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/emmetio/codemirror-plugin.git"
  },
  "keywords": [],
